{
  "include": ["tests/**/*.ts"],
  "compilerOptions": {
    "declaration": false,
    "sourceMap": false,
    "sourceMap": false,
    "outDir": "dist",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node"],
    "module": "esNext",
    "moduleResolution": "node",
    "target": "esNext",
    "allowJs": false,
    "skipLibCheck": true
  }
}

{
  "include": ["./src"],
  "compilerOptions": {
    "outDir": "./lib",
    "incremental": true,
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": ".",
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,

    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  }
}

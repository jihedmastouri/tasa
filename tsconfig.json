{
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "compilerOptions": {
    /* Emit */
    "declaration": true,
    "sourceMap": true,
    "sourceMap": true,
    "outDir": "dist/esm",
    "removeComments": true,

    /* Interop */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Module */
    "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
    "types": ["node"],
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    // "rootDir": "src",
    // "baseUrl": "src",
    // "paths": {
    //   "src/*": ["src/*"]
    // },

    /* Checking */
    // "strict": true,

    /* JavaScript */
    "allowJs": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
